<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00235E"
    android:backgroundTint="#00235E"
    tools:context=".HomePage">

    <ImageView
        android:id="@+id/yellow_homepage_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf ="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/homepage_yellow"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/welcome"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:text="@string/customer"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/shoppingbag"
                android:layout_width="35dp"
                android:layout_height="36dp"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="34dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/shoppingbag"
                tools:ignore="contentDescription" />

            <ImageView
                android:id="@+id/ava"
                android:layout_width="60dp"
                android:layout_height="49dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="26dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ava"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/blue_homepage_background"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/top_homepage"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#AB841C"
                android:text="Loyalty card"
                />

            <ImageView
                android:id="@+id/cheese1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="303dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/black_cheese" />

            <ImageView
                android:id="@+id/cheese2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="255dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/black_cheese" />

            <ImageView
                android:id="@+id/cheese3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="207dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/black_cheese" />

            <ImageView
                android:id="@+id/cheese4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="159dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/black_cheese" />

            <ImageView
                android:id="@+id/cheese5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="111dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/black_cheese" />

            <ImageView
                android:id="@+id/cheese6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/black_cheese" />

            <ImageView
                android:id="@+id/cheese7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="31dp"
                android:src="@drawable/black_cheese" />

        </RelativeLayout>

        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="370dp"
            android:layout_height="160dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@+id/blue_homepage_background">

            <ImageView
                android:id="@+id/sale"
                android:layout_width="wrap_content"
                android:layout_height="190dp"
                app:srcCompat="@drawable/sale"
                tools:ignore="contentDescription" />

            <ImageView
                android:id="@+id/shop1"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/shop1"
                tools:ignore="contentDescription" />

            <ImageView
                android:id="@+id/shop2"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/shop2"
                tools:ignore="contentDescription" />

            <ImageView
                android:id="@+id/shop3"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/shop3"
                tools:ignore="contentDescription" />
        </ViewFlipper>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="__________________"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_homepage"
                android:backgroundTint="#00235E"
                android:clipToPadding="false"
                android:fillViewport="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_above="@+id/bottom_navigation">

                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:rowCount="0" />
            </ScrollView>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bottom_navigation"
                android:elevation="2dp"
                app:itemIconSize="30dp"
                app:itemIconTint="@drawable/items_selector"
                app:labelVisibilityMode="unlabeled"
                app:menu="@menu/menu" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
